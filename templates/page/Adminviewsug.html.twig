{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <h1 class="my-2 text-center">Liste des toutes les suggestions</h1>
        <div class="container row mt-3 float-none">
            {% if vsg | length > 0 %}
                <table class="table table-striped table table-hover bg-secondary">
                    <thead class="text-white text-uppercase">
                        <tr>
                            <th>Contact</th>
                            <th>email</th>
                            <th>Commentaire</th>
                            <th class="text-center">Poste</th>
                        </tr>
                    </thead>
                    {% for l in vsg %}
                    <tbody class="bg-white">
                        <tr>
                            <td>{{l.Contact}}</td>
                            <td>{{l.Sugemail}}</td>
                            <td>{{l.SugComment|u.truncate(300,'.')}}</td>
                            <td class="text-center">{{l.dateSuggestion|ago}}</td>
                            <td class="col-md-1">
                                {# <a href="{{path('Mod_project',{'slug':l.SugSlug})}}" class="btn btn-sm"><i class="fa-solid fa-pen-to-square text-success"></i></a> #}
                                <a onclick="return confirm('Etes vous sur d avoir supprimer le projet nommÃ©  {{l.SugSlug|upper}} ?')" href="{{path('sugdelete',{'slugsug':l.id})}}" class="btn btn-sm"><i class="fas fa-trash text-danger"></i></a>
                            <td>
                        </tr>
                    </tbody>
                    {% endfor %}
                </table>
            {% else %}
                <p class="h1 text-danger text-center"><em>Aucune suggestion !</em></p>
            {% endif %}
        </div>
    </div>
{% endblock %}